    android:shape="oval">
    <gradient
        android:angle="90"
        android:startColor="#6680DEEA"
        android:centerColor="#4D4DD0E1"
        android:endColor="#3326C6DA"
        android:type="linear" />
    <size
        android:width="220dp"
        android:height="220dp" />
    <corners android:radius="110dp" />
</shape>