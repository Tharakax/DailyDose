<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp">

    <!-- Progress Tracking Illustration -->
    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="32dp"
        app:cardCornerRadius="100dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/onboarding_surface">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Progress Chart -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="bottom"
                android:layout_marginBottom="16dp">

                <!-- Bar 1 -->
                <View
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:background="@color/onboarding_primary"
                    android:layout_marginEnd="8dp" />

                <!-- Bar 2 -->
                <View
                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:background="@color/onboarding_accent"
                    android:layout_marginEnd="8dp" />

                <!-- Bar 3 -->
                <View
                    android:layout_width="20dp"
                    android:layout_height="80dp"
                    android:background="@color/onboarding_primary"
                    android:layout_marginEnd="8dp" />

                <!-- Bar 4 -->
                <View
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    android:background="@color/onboarding_accent" />

            </LinearLayout>

            <!-- Trend Line -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“ˆ"
                android:textSize="24sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Track Your Progress"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/onboarding_text_primary"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

    <!-- Description -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monitor your health trends, analyze your progress, and stay motivated with detailed insights and beautiful charts."
        android:textSize="16sp"
        android:textColor="@color/onboarding_text_secondary"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:maxWidth="300dp" />

</LinearLayout>
