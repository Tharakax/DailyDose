<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".fragments.MeditationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="32dp">

            <!-- Back Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_back_to_dashboard"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="@drawable/circle_background"
                app:icon="@drawable/ic_arrow_back"
                app:iconTint="@color/text_primary"
                app:iconSize="24dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🧘"
                    android:textSize="32sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Meditation"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Find your inner peace"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

        </LinearLayout>

        <!-- Meditation Setup Section -->
        <LinearLayout
            android:id="@+id/meditation_setup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Duration Selection Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⏱️"
                        android:textSize="24sp"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Duration"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp" />

                    <RadioGroup
                        android:id="@+id/rg_duration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/rb_1min"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1 minute"
                            android:textColor="@color/text_primary"
                            android:layout_marginBottom="8dp"
                            android:buttonTint="@color/primary_color" />

                        <RadioButton
                            android:id="@+id/rb_5min"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5 minutes"
                            android:textColor="@color/text_primary"
                            android:layout_marginBottom="8dp"
                            android:buttonTint="@color/primary_color" />

                        <RadioButton
                            android:id="@+id/rb_10min"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10 minutes"
                            android:textColor="@color/text_primary"
                            android:layout_marginBottom="8dp"
                            android:buttonTint="@color/primary_color" />

                        <RadioButton
                            android:id="@+id/rb_custom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Custom"
                            android:textColor="@color/text_primary"
                            android:buttonTint="@color/primary_color" />

                    </RadioGroup>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_custom_duration"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Set Custom Duration"
                        android:textColor="@color/primary_color"
                        app:strokeColor="@color/primary_color"
                        app:cornerRadius="16dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Music Selection Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🎵"
                        android:textSize="24sp"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Background Music"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Play calming background music"
                            android:textSize="16sp"
                            android:textColor="@color/text_secondary" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switch_music"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:thumbTint="@color/primary_color"
                            android:trackTint="@color/soft_blue" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Selected Options Display -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/soft_blue">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tv_selected_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Selected: 5 minutes"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_color"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tv_music_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Silent meditation"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Start Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_start_meditation"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="Start Meditation"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:backgroundTint="@color/primary_color"
                app:cornerRadius="20dp"
                app:icon="@drawable/ic_play"
                app:iconTint="@color/white"
                app:iconGravity="start"
                android:elevation="8dp" />

        </LinearLayout>

        <!-- Meditation Active Section -->
        <LinearLayout
            android:id="@+id/meditation_active"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Countdown Timer Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/primary_color">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="32dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🧘‍♀️"
                        android:textSize="48sp"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Meditation in Progress"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:id="@+id/tv_countdown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="05:00"
                        android:textSize="48sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:fontFamily="monospace" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Stop Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_stop_meditation"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="Stop Meditation"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/primary_color"
                android:backgroundTint="@color/white"
                app:strokeColor="@color/primary_color"
                app:strokeWidth="2dp"
                app:cornerRadius="20dp"
                app:icon="@drawable/ic_stop"
                app:iconTint="@color/primary_color"
                app:iconGravity="start"
                android:elevation="4dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>

